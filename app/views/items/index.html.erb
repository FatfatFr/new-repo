<h1>All the items</h1>
<div class="allcards">
<% @items.each do |item| %>

    <div class="card" style="width: 18rem;">
  <img class="card-img-top" src="assets/image.jpg" alt="Card image cap">
  <div class="card-body">
  <%= link_to item.name %>
  <p class="card-text">Brief description of the item.</p>
  </div>
</div>

<% end %>
</div>
