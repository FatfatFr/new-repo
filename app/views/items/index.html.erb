<h1>All the items</h1>

<div class="allcards">
  <% @items.each do |item| %>

    <div class="card" style="width: 20rem; height: auto">
      <%= link_to cl_image_tag @item.photo.key, height: 300, crop: :fill, item_path(item) %>
      <div class="card-body">
        <p><b><%= item.name %></b></p>
        <p class="card-text"><%= item.description %></p>
    <% if item.favorite?(current_user)%>
      <%= link_to 'Enlever des favoris' %>
    <% else %>
      <%= link_to 'Ajouter aux favoris' %>
    <% end %>
      </div>
    </div>

  <% end %>
</div>
